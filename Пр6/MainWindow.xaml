<Window x:Class="Пр6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пр6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Content="Добро Пожаловать" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Перейти" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Grid.ColumnSpan="3" Grid.Row="1" Content="приложение WPF с навигацией между тремя страницами" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Закрыть" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
    </Grid>
</Window>
